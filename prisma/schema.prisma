generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "postgresql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    username  String   @unique
    password  String
    books     Book[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Book {
    id          String   @id @default(cuid())
    bookId      String // e.g., the Google Books ID
    title       String
    authors     String[]
    description String?
    image       String?
    link        String?
    userId      String
    user        User     @relation(fields: [userId], references: [id])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@index([userId])
}
